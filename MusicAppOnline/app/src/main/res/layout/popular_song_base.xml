<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_popular_song"
        android:scaleType="fitXY"
        android:layout_margin="3dp"
        android:layout_width="80dp"
        android:layout_height="80dp" />
    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="17sp"
        android:text="Ten bai hat"
        android:textColor="#363636"
        android:layout_toRightOf="@id/iv_popular_song"
        android:id="@+id/tv_popular_song_name"
        android:maxWidth="230dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="17sp"
        android:text="Ten ca si"
        android:maxWidth="230dp"
        android:textColor="#8c8a8b"
        android:layout_toRightOf="@id/iv_popular_song"
        android:layout_below="@id/tv_popular_song_name"
        android:id="@+id/tv_popular_song_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:src="@drawable/iconlove"
        android:layout_marginRight="10dp"
        android:id="@+id/iv_like"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="30dp"
        android:layout_height="30dp" />

</RelativeLayout>