<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:text="1"
            android:layout_margin="10dp"
            android:id="@+id/tv_music_player_list_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:text="Ten bai hat"
            android:maxWidth="250dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/tv_music_player_list_song"
            android:layout_toRightOf="@id/tv_music_player_list_index"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@id/tv_music_player_list_song"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:text="Ten ca si"
            android:maxWidth="250dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/tv_music_player_list_singer"
            android:layout_toRightOf="@id/tv_music_player_list_index"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>