<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:scaleType="fitXY"
        android:layout_margin="3dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/iv_search_song"
        android:layout_width="80dp"
        android:layout_height="80dp" />
    <TextView
        android:id="@+id/tv_search_song_name"
        android:textSize="18sp"
        android:textColor="#000000"
        android:text="Ten bai hat"
        android:layout_toRightOf="@id/iv_search_song"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:maxWidth="250dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_search_singer"
        android:textSize="18sp"
        android:layout_below="@id/tv_search_song_name"
        android:text="Ca si"
        android:layout_toRightOf="@id/iv_search_song"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:maxWidth="250dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_search_love"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/iconlove"
        android:layout_width="30dp"
        android:layout_height="30dp" />

</RelativeLayout>